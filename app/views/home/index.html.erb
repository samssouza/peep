<div class="mh-100"  style="background-image: url('images/home-img.png');  background-size: cover;" >

  <h1>Login</h1>

  <%= form_with model: @user, url: request.fullpath, local: true do |form| %>
    <div class="form-group">
      <%= form.label :username, for: "exampleInputEmail1" %>
      <%= form.text_field :username, type: "email", class: "form-control", placeholder: "Enter email" %>
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">

      <%= form.label :password, for: "exampleInputPassword1" %>
      <%= form.text_field :password, type: "password", class: "form-control", id: "exampleInputPassword1", placeholder: "Password" %>
    </div>
    <%= submit_tag "Login", type: "submit", class: "btn btn-primary" %>

  <% end %>
  <%= link_to 'Sign Up!', new_user_path %>

</div>
